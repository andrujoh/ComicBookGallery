
@{
  ViewBag.Title = "Detail";
}

<h2>@ViewBag.SeriesTitle</h2>
<h3>Issue @ViewBag.IssuesNumber</h3>
<h4>Description:</h4>
<div>@Html.Raw(ViewBag.Description)</div>

@if (ViewBag.Artists.Length > 0)
{
  <h4>Artists:</h4>
  <div>
    <ul>
      @foreach (var artist in ViewBag.Artists)
      {
        <li>@artist</li>
      }
    </ul>
  </div>
}